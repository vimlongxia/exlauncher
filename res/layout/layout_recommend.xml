<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="49dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/recommend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="60dp"
        android:text="@string/str_recommend"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tx_recommend_allcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="192dp"
        android:layout_marginTop="80dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tx_recommend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/tx_recommend_allcount"
        android:textColor="#3495D9"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="976dp"
        android:layout_height="460dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="116dp"
        android:descendantFocusability="afterDescendants" >

        <com.vim.exlauncher.ui.GroupGridLayout
            android:id="@+id/gv_shortcut_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:descendantFocusability="afterDescendants"
            android:orientation="horizontal"
            android:rowCount="20" />
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="638dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/prompt_recommend" />

</RelativeLayout>